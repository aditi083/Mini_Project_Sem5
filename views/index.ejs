  </div>


  <script>
    let subMenu = document.getElementById("subMenu");
    function toggleMenu() {
      subMenu.classList.toggle("open-menu");
    }

    function clearSelectTags() {
        // Clear all select tags
        const selectTags = document.getElementsByTagName('select');
        for (let selectTag of selectTags) {
            selectTag.selectedIndex = -1; // Reset the selected index
        }
    }
  </script>
</body>

</html>