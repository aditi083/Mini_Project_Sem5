<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/profile.css">
    <title>Profile Page Design</title>
</head>

<body>
    <!-- NAVBAR -->
    <nav>
        <img src="/images/Vit_logo.jpg" class="logo">
        <div class="profile">
          <p style="margin-top: 10px;">Profile</p>
          <img src="/images/profile.jpg" class="user-pic" onclick="toggleMenu()">
        </div>
        <div class="sub-menu-wrap" id="subMenu">
          <div class="sub-menu">
            <div class="user-info">
              <img src="/images/user.png">
              <% if(locals){%>
              <h3><%= name %></h3>
              <% } %>
            </div>
            <hr>
            <a href="#" class="sub-menu-link">
              <img src="/images/profile.png">
              <p>Edit Profile</p>
              <span>></span>
            </a>
            <a href="#" class="sub-menu-link">
              <img src="/images/setting.png">
              <p>Settings & Privacy</p>
              <span>></span>
            </a>
            <a href="/logout" class="sub-menu-link">
              <img src="/images/logout.png">
              <p>logout</p>
              <span>></span>
            </a>
          </div>
        </div>
      </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="profile-links">
                    <img src="/images/dummy.png" alt="">
                    <li><a href="/home">Home</a></li>
                    <li><a href="#">Bucket-1</a></li>
                    <li><a href="#">Bucket-2</a></li>
                    <li><a href="#">Bucket-3</a></li>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mt-custum">
                    <div class="details name">
                        <div class="row">
                            <div class="col-8">
                                Name
                            </div>
                            <div class="col-4">
                                <%=name%>
                            </div>
                        </div>
                    </div>
                    <div class="details email">
                        <div class="row">
                            <div class="col-8">
                                Email
                            </div>
                            <div class="col-4">
                                <%=email%>
                            </div>
                        </div>
                    </div>
                    <div class="details number">
                        <div class="row">
                            <div class="col-8">
                                Phone Number
                            </div>
                            <div class="col-4">
                                <%=phoneNumber%>
                            </div>
                        </div>
                    </div>
                    <div class="details designation">
                        <div class="row">
                            <div class="col-8">
                                Designation
                            </div>
                            <div class="col-4">
                                <%=designation%>
                            </div>
                        </div>
                    </div>
                    <div class="details employeeid">
                        <div class="row">
                            <div class="col-8">
                                 Employee ID
                            </div>
                            <div class="col-4">
                                123
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="mt-5">About Me</h3>
                <p>Papers published in National/International Conference: <%=count1%></p>
                <p>Points: <%=totalSum1%></p>
                <hr>
                <p>Papers published in National/International Journal: <%=count2%></p>
                <p>Points: <%=totalSum2%></p>
                <hr>
                <p>Fellowship received for National/International Conference: <%=count3%></p>
                <p>Points: <%=totalSum3%></p>
            </div>
        </div>
    </div>

    <script>
        let subMenu = document.getElementById("subMenu");
        function toggleMenu() {
          subMenu.classList.toggle("open-menu");
        }
      </script>
</body>

</html>